<div class="row">
	<aside class="col-md-4 vta">

		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		<div style = "margin-top: 100px;">	
		<% if @user.registrations.any? %>	
			<%= render @registrations %>
		<% end %>
		</div>	
		</section>

		<section class="stats">
	
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.posts.any? %>
			<ol class="micrposts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>

</div>
