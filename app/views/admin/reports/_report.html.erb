<% if current_user.admin? %>
<tr id = "report-ajax">
	<td>
		<%= link_to report.user.name, user_path(report.user) %>
	</td>
		
	<td>
		<%= link_to report.post.title, post_path(report.post) %>
	</td>
		
	<td>
	
		<%=	report.content %>
	</td>	
	<td>
		<%= link_to 'delete', admin_report_path(report), method: :delete, data: { confirm: "You sure?", remote: true }%> 
	</td>

	<td>
		
		<%= time_ago_in_words(report.post.created_at) %>
	</td>	
</tr>
<% end %>